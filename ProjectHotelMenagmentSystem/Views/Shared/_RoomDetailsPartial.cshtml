@model IEnumerable<ProjectHotelMenagmentSystem.ViewModel.RoomDetailsViewModel>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js" defer></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#roomsTable").DataTable({
            "ajax": {
                "url": "/Room/GetAllRooms",
                "type": 'GET',
                "dataType": 'JSON',
            },
            "columns": [
                { "data": "RoomNumber" },
                { "data": "RoomPrice" },
                { "data": "RoomCapacity" }
            ]
        })
    });
</script>

<table style="width:100%" id="roomsTable" class="display">
    <thead>
        <tr>
            <th>
                Action
            </th>
            <th>

                Room Image
            </th>
            <th>

                Room No.
            </th>
            <th>
                Room Price


            </th>
            <th>

                Booking Status

            </th>
            <th>
                Room Type

            </th>
            <th>

                Room Capacity


            </th>
            <th>
                Room Description
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span id="btnDelete" class="glyphicon glyphicon-trash" onclick="DeleteRoom(@item.RoomId)"></span>&nbsp;&nbsp;
                    <span id="btnEdit" class="glyphicon glyphicon-pencil" onclick="EditRoom(@item.RoomId)"></span>
                </td>
                <td>
                    <img src="@Url.Content("~/RoomImages/" + item.RoomImage)" width="30" height="30" class="img-responsive" />
                </td>
                <td>
                    @item.RoomNumber
                </td>
                <td>
                    @item.RoomPrice
                </td>
                <td>
                    @item.BookingStatus
                </td>
                <td>
                    @item.RoomType
                </td>
                <td>
                    @item.RoomCapacity
                </td>
                <td>
                    @item.RoomDescription
                </td>
            </tr>
        }

    </tbody>

</table>

